<div class="col-sm-3 sidenav no-padding">
    <div class="left">
        <div class="top">
            <h1>Chat</h1>
            <a
            href="#groupChatModal"
            class="create-group-chat"
            data-toggle="modal"
            title="Tạo một nhóm trò chuyện mới"
            ></a>
        </div>
        <div id="all-chat">
            <ul class="people no-padding-start">
                <% allConversationWithMessages.map(conversation => { %>
                    <% if(conversation.members) { %>
                        <a href="#uid_<%= conversation._id %>" class="room-chat" data-target="#to_<%= conversation._id %>">
                            <li class="person group-chat" data-chat="<%= conversation._id %>">
                                <div class="left-avatar">
                                    <img src="images/users/group-avatar-trungquandev.png" alt="" />
                                </div>
                                <span class="name">
                                    <span class="group-chat-name">
                                        <% if(conversation.name.length > 15) { %> 
                                            <%= conversation.name.substr(0, 14) %><span>...</span>
                                        <% } else { %> 
                                            <%= conversation.name %>
                                        <% } %>
                                    </span> 
                                </span>
                                <span class="time">
                                    <%= convertTimestampHumanTime(lastItemFromArr(conversation.messages).createdAt) %>
                                </span>
                                <span class="preview convert-emoji">
                                    <% if (lastItemFromArr(conversation.messages).messageType === "text") { %> 
                                        <%= lastItemFromArr(conversation.messages).text %>
                                    <% } %>

                                    <% if (lastItemFromArr(conversation.messages).messageType === "image") { %> 
                                        Hình ảnh...
                                    <% } %>

                                    <% if (lastItemFromArr(conversation.messages).messageType === "file") { %> 
                                        Tệp đính kèm...
                                    <% } %>
                                </span>
                            </li>
                        </a>
                    <% } else { %>
                        <a href="#uid_<%= conversation._id %>" class="room-chat" data-target="#to_<%= conversation._id %>">
                            <li class="person" data-chat="<%= conversation._id %>">
                                <div class="left-avatar">
                                <div class="dot"></div>
                                    <img
                                        src="images/users/<%= conversation.avatar %>"
                                        alt=""
                                    />
                                </div>
                                <span class="name">
                                    <% if(conversation.username.length > 15) { %> 
                                        <%= conversation.username.substr(0, 14) %><span>...</span>
                                    <% } else { %> 
                                        <%= conversation.username %>
                                    <% } %>
                                </span>
                                <span class="time">
                                    <%= convertTimestampHumanTime(lastItemFromArr(conversation.messages).createdAt) %>
                                </span>
                                <span class="preview convert-emoji">
                                    <% if (lastItemFromArr(conversation.messages).messageType === "text") { %> 
                                        <%= lastItemFromArr(conversation.messages).text %>
                                    <% } %>

                                    <% if (lastItemFromArr(conversation.messages).messageType === "image") { %> 
                                        Hình ảnh...
                                    <% } %>

                                    <% if (lastItemFromArr(conversation.messages).messageType === "file") { %> 
                                        Tệp đính kèm...
                                    <% } %>
                                </span>
                            </li>
                        </a>
                    <% } %>
                <% }); %>
            </ul>
            <div class="read-more-all-chat">
                <% if (countAllConversations !== allConversationWithMessages.length) { %> 
                    <a href="javascript:void(0)" id="link-read-more-all-chat" >
                        <strong>Xem thêm...</strong>
                    </a>
                <% } %>
                <div class="read-more-all-chat-loader"><div></div><div></div></div>
            </div>
        </div>
    </div>
  </div>
  