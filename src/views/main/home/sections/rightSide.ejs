<div class="col-sm-9 sidenav no-padding">
    <dib class="tab-content" id="screen-chat">
        <% allConversationWithMessages.map((conversation, index) => { %>
            <% if(conversation.members) { %>
                <div 
                    class="right tab-pane <% if (index === 0) { %>active<% } %>" 
                    data-chat="<%= conversation._id %>" 
                    id="to_<%= conversation._id %>"
                >
                    <div class="top">
                        <span>To: <span class="name"><%= conversation.name %></span></span>
                        <span class="chat-menu-right">
                            <a class="leave-group-chat" id="<%= conversation._id %>" href="javascript:void(0)">
                                Rời nhóm
                                <i class="fa fa-sign-out"></i>
                            </a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="javascript:void(0)">&nbsp;</a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="#addMemberModal_<%= conversation._id %>" data-toggle="modal">
                                <span>Thêm thành viên</span>
                                <i class="fa fa-plus-square"></i>
                            </a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="javascript:void(0)">&nbsp;</a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="#attachmentsModal_<%= conversation._id %>" class="show-attachments" data-toggle="modal">
                                Tệp đính kèm
                                <i class="fa fa-paperclip"></i>
                            </a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="javascript:void(0)">&nbsp;</a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="#imagesModal_<%= conversation._id %>" class="show-images" data-toggle="modal">
                                Hình ảnh
                                <i class="fa fa-photo"></i>
                            </a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="javascript:void(0)">&nbsp;</a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="#membersModal_<%= conversation._id %>" class="number-members" data-toggle="modal">
                                <span class="show-number-members" ><%= conversation.usersAmount %></span>
                                <span>Thành viên</span>
                                <i class="fa fa-users"></i>
                            </a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="javascript:void(0)">&nbsp;</a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="javascript:void(0)" class="number-messages" data-toggle="modal">
                                <span class="show-number-messages" ><%= conversation.messagesAmount %></span>
                                <span>Tin nhắn</span>
                                <i class="fa fa-comment-o"></i>
                            </a>
                        </span>
                    </div>
                    <div class="content-chat">
                        <div class="chat chat-in-group" data-chat="<%= conversation._id %>">
                            <img src="images/chat/message-loading.gif" class="message-loading" />
                            <% conversation.messages.map(message => { %>
                                <% if (message.messageType === "text") { %>
                                    <div 
                                        class="convert-emoji bubble <% if (message.senderId == user._id) { %>me<% } else { %>you<% } %>"
                                        data-mess-id="<%= message._id %>"
                                    >
                                        <img src="/images/users/<%= message.sender.avatar %>" class="avatar-small" title="<%= message.sender.name %>">
                                        <div class="bubble-content">
                                            <%= message.text %>   
                                        </div>
                                    </div>
                                <% } %>

                                <% if (message.messageType === "image") { %>
                                    <div class="bubble <% if (message.senderId == user._id) { %>me<% } else { %>you<% } %> bubble-image-file" 
                                        data-mess-id="<%= message._id %>"
                                    >
                                        <img src="/images/users/<%= message.sender.avatar %>" class="avatar-small" title="<%= message.sender.name %>">
                                        <img
                                            src="data:<%= message.file.contentType %>; base64, <%= bufferToBase64(message.file.data) %>"
                                            class="show-image-chat"
                                        />
                                    </div>
                                <% } %>

                                <% if (message.messageType === "file") { %>
                                    <div class="bubble <% if (message.senderId == user._id) { %>me<% } else { %>you<% } %> bubble-image-file" 
                                        data-mess-id="<%= message._id %>"
                                    >
                                        <img src="/images/users/<%= message.sender.avatar %>" class="avatar-small" title="<%= message.sender.name %>">
                                        <div class="bubble-content">
                                            <a
                                                href="data:<%= message.file.contentType %>; base64, <%= bufferToBase64(message.file.data) %>"
                                                download="<%= message.file.fileName %>"
                                            >
                                                <%= message.file.fileName %>
                                            </a>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
                    <div class="write" data-chat="<%= conversation._id %>">
                        <input type="text" class="write-chat chat-in-group" id="write-chat-<%= conversation._id %>" data-chat="<%= conversation._id %>" />
                        <div class="icons">
                            <a href="#" class="icon-chat" data-chat=""
                                ><i class="fa fa-smile-o"></i
                            ></a>
                            <label for="image-chat-<%= conversation._id %>">
                                <input
                                    type="file"
                                    id="image-chat-<%= conversation._id %>"
                                    name="my-image-chat"
                                    class="image-chat chat-in-group"
                                    data-chat="<%= conversation._id %>"
                                />
                                <i class="fa fa-photo"></i>
                            </label>
                            <label for="attachment-chat-<%= conversation._id %>">
                                <input
                                    type="file"
                                    id="attachment-chat-<%= conversation._id %>"
                                    name="my-attachment-chat"
                                    class="attachment-chat chat-in-group"
                                    data-chat="<%= conversation._id %>"
                                />
                                <i class="fa fa-paperclip"></i>
                            </label>
                            <a href="javascript:void(0)" class="video-chat-group">
                                <i class="fa fa-video-camera"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div 
                    class="right tab-pane <% if (index === 0) { %>active<% } %>" 
                    data-chat="<%= conversation._id %>" 
                    id="to_<%= conversation._id %>"
                >
                    <div class="top">
                        <span>To: <span class="name"><%= conversation.username %></span></span>
                        <span class="chat-menu-right">
                        <a href="#attachmentsModal_<%= conversation._id %>" class="show-attachments" data-toggle="modal">
                            Tệp đính kèm
                            <i class="fa fa-paperclip"></i>
                        </a>
                        </span>
                        <span class="chat-menu-right">
                        <a href="javascript:void(0)">&nbsp;</a>
                        </span>
                        <span class="chat-menu-right">
                        <a href="#imagesModal_<%= conversation._id %>" class="show-images" data-toggle="modal">
                            Hình ảnh
                            <i class="fa fa-photo"></i>
                        </a>
                        </span>
                    </div>
                    <div class="content-chat">
                        <div class="chat" data-chat="<%= conversation._id %>">
                            <img src="images/chat/message-loading.gif" class="message-loading" />
                            <% conversation.messages.map(message => { %>
                                <% if (message.messageType === "text") { %>
                                    <div 
                                        class="convert-emoji bubble <% if (message.senderId == user._id) { %>me<% } else { %>you<% } %>"
                                        data-mess-id="<%= message._id %>"
                                    >
                                        <img src="/images/users/<%= message.sender.avatar %>" class="avatar-small" title="<%= message.sender.name %>">
                                        <div class="bubble-content">
                                            <%= message.text %>   
                                        </div>   
                                    </div>
                                <% } %>

                                <% if (message.messageType === "image") { %>
                                    <div class="bubble <% if (message.senderId == user._id) { %>me<% } else { %>you<% } %> bubble-image-file" 
                                        data-mess-id="<%= message._id %>"
                                    >
                                        <img src="/images/users/<%= message.sender.avatar %>" class="avatar-small" title="<%= message.sender.name %>">
                                        <img
                                            src="data:<%= message.file.contentType %>; base64, <%= bufferToBase64(message.file.data) %>"
                                            class="show-image-chat"
                                        />  
                                    </div>
                                <% } %>

                                <% if (message.messageType === "file") { %>
                                    <div class="bubble <% if (message.senderId == user._id) { %>me<% } else { %>you<% } %> bubble-image-file" 
                                        data-mess-id="<%= message._id %>"
                                    >
                                        <img src="/images/users/<%= message.sender.avatar %>" class="avatar-small" title="<%= message.sender.name %>">
                                        <div class="bubble-content">
                                            <a
                                                href="data:<%= message.file.contentType %>; base64, <%= bufferToBase64(message.file.data) %>"
                                                download="<%= message.file.fileName %>"
                                            >
                                                <%= message.file.fileName %>
                                            </a> 
                                        </div> 
                                    </div>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
                    <div class="write" data-chat="<%= conversation._id %>">
                        <input type="text" class="write-chat" id="write-chat-<%= conversation._id %>" data-chat="<%= conversation._id %>" />
                        <div class="icons">
                            <a href="#" class="icon-chat" data-chat=""
                                ><i class="fa fa-smile-o"></i
                            ></a>
                            <label for="image-chat-<%= conversation._id %>">
                                <input
                                    type="file"
                                    id="image-chat-<%= conversation._id %>"
                                    name="my-image-chat"
                                    class="image-chat"
                                    data-chat="<%= conversation._id %>"
                                />
                                <i class="fa fa-photo"></i>
                            </label>
                            <label for="attachment-chat-<%= conversation._id %>">
                                <input
                                    type="file"
                                    id="attachment-chat-<%= conversation._id %>"
                                    name="my-attachment-chat"
                                    class="attachment-chat"
                                    data-chat="<%= conversation._id %>"
                                />
                                <i class="fa fa-paperclip"></i>
                            </label>
                            <a
                                href="javascript:void(0)"
                                id="video-chat-<%= conversation._id %>"
                                class="video-chat"
                                data-chat="<%= conversation._id %>"
                            >
                                <i class="fa fa-video-camera"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        <% }); %>
    </dib>
  <!-- sau này xử lý sau Trường hợp tài khoản chưa có bạn bè thì hiện màn hình dưới. -->
</div>
